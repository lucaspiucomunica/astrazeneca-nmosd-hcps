{
  "name": "nmo-theme",
  "version": "1.0.0",
  "description": "Tema para o site sobre NMO da AstraZeneca",
  "scripts": {
    "build:css:watch": "npx tailwindcss -i ../css/input.css -o ../css/output.css --watch",
    "build:css": "npx tailwindcss -i ../css/input.css -o ../css/output.min.css --minify",
    "build:js": "npx esbuild ../js/bundle.js --bundle --minify --outfile=../js/bundle.min.js",
    "build": "npm run build:css && npm run build:js"
  },
  "devDependencies": {
    "tailwindcss": "^3.4.17",
    "esbuild": "^0.20.12"
  }
}
